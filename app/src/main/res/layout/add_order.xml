<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_order_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOrderActivity">
    <View
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/decor_donut_circle"
        android:backgroundTint="@color/green_1" />
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/decor_donut_circle"
        android:backgroundTint="@color/white" />
    <View
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/decor_circle"
        android:backgroundTint="@color/gray_2" />
    <View
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="-100dp"
        android:background="@drawable/decor_donut_circle"
        android:backgroundTint="@color/green_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/helvetica_normal"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textColor="@color/green_1"
            android:text="Add your food"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/helvetica_normal"
                android:textSize="16dp"
                android:text="Nama makanan"/>
            <EditText
                android:id="@+id/food_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/half_rounded_rect_stroke"
                android:padding="16dp"
                android:fontFamily="@font/helvetica_normal"
                android:inputType="text"
                android:hint="Food Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/helvetica_normal"
                android:textSize="16sp"
                android:text="Price"/>
            <EditText
                android:id="@+id/price_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/half_rounded_rect_stroke"
                android:padding="16dp"
                android:fontFamily="@font/helvetica_normal"
                android:inputType="text"
                android:hint="Rp.16000" />
            <TextView
                android:id="@+id/error_msg_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/helvetica_normal"
                android:textSize="16sp"
                android:textColor="@color/error"
                android:text="@string/error_email"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/helvetica_normal"
                android:textSize="16sp"
                android:text="Description"/>
            <EditText
                android:id="@+id/pass_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/half_rounded_rect_stroke"
                android:padding="16dp"
                android:fontFamily="@font/helvetica_normal"
                android:inputType="text"
                android:hint="Half eaten, etc."/>

        </LinearLayout>

        <Button
            android:id="@+id/add_product"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green_1"
            android:fontFamily="@font/helvetica_normal"
            android:letterSpacing="0.02"
            android:text="Add product"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"/>

    </LinearLayout>

</RelativeLayout>